<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.ConfirmDetailsFragment"
    tools:ignore="RtlSymmetry">
    <include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvConfirmDis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:textSize="16sp"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginTop="10dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirmDis"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R ashok"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlContactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlName"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_number"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+789798797"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlContactNumber"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ashok@gamilcom"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlMileage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlEmail"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mileage"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4268"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlMileage"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/incident_date"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02 oct 2019"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlIncidentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlDate"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/incident_type"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fire"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlEditDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlIncidentType"

        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_details"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:layout_weight="0.4"
            android:gravity="center|start"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlLossDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlEditDetails"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insures_loss_date"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02 oct 2019"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlVF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlLossDate"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_financed"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlSFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlVF"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settlement_figure_accepted"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textColor="@color/black"
            android:layout_weight="0.4"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnlEditDetails1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnlSFA"

        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="0.4"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_details"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:layout_weight="0.4"
            android:gravity="center|start"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/colorAccent"
        android:text="@string/confirm_and_submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/lnlEditDetails1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
