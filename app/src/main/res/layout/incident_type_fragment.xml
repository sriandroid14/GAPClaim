<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MileageIncidentFragment"
    tools:ignore="RtlSymmetry">
    <include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIncidentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_incident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginTop="@dimen/margin_xl"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTheft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xl"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:text="@string/theft"
        android:textAllCaps="false"
        android:background="@drawable/border_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIncidentType" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFire"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/btnTheft"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginTop="10dp"
        android:text="@string/fire"
        android:textAllCaps="false"
        android:background="@drawable/border_background"
         />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVandalism"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/btnFire"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginTop="10dp"
        android:text="@string/vandalism"
        android:textAllCaps="false"
        android:background="@drawable/border_background" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRoadAccident"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/btnVandalism"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginTop="10dp"
        android:text="@string/road_accident"
        android:textAllCaps="false"
        android:background="@drawable/border_background"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFlood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/btnRoadAccident"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_xl"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_xl"
        android:text="@string/flood"
        android:textAllCaps="false"
        android:background="@drawable/border_background"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIncidentTypeSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/colorAccent"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRoadAccident"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/margin_xl"
        android:layout_marginLeft="@dimen/margin_xl"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
