<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AssistanceFragment"
    tools:ignore="RtlSymmetry">
    <include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assistance_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        android:layout_marginTop="@dimen/margin_xl"/>
    <TextView
        android:id="@+id/tvvFinance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_is_financed"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:id="@+id/rgFinance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvvFinance"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/margin_xl"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_m"
            android:textColor="@color/black"
            android:text="@string/yes"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:textColor="@color/black"
            android:text="@string/no"/>

    </RadioGroup>
    <TextView
        android:id="@+id/tvInsurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settlement_insure"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/rgFinance"
        android:layout_marginTop="30dp"/>
    <RadioGroup
        android:id="@+id/rgInsurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvInsurance"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/margin_xl"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_m"
            android:textColor="@color/black"
            android:text="@string/yes"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:textColor="@color/black"
            android:text="@string/no"/>

    </RadioGroup>
    <Button
        android:id="@+id/btnAstContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/lightGray"
        android:text="@string/Continue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/rgInsurance"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_xl"
        android:layout_marginStart="@dimen/margin_xl"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
