<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WelcomeFragment">
    <include layout="@layout/toolbar"
        android:id="@+id/tool_bar"/>
    <TextView
        android:id="@+id/tvHeadTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_gap_claim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        android:layout_marginTop="@dimen/margin_xxl"/>
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_no_vehicle_confirm"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/tvHeadTitle"
        android:layout_marginTop="@dimen/margin_l"/>
    <TextView
        android:id="@+id/tvMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_description"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        android:layout_marginTop="@dimen/margin_l"/>
    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_provide_weblink"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage1"
        android:layout_marginTop="@dimen/margin_l"/>

    <Button
        android:id="@+id/btnMainContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@color/colorAccent"
        android:text="@string/Continue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/margin_xl"
        android:layout_marginLeft="@dimen/margin_xl"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
